<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <!-- Weather Forecast Header -->
    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="@string/textViewMain"
        android:textColor="@color/colorPrimary" />

    <!-- View, used as divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <!-- Location, for user to enter -->
    <EditText
        android:id="@+id/editTextMainLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="text|textAutoComplete|textAutoCorrect|textCapWords"
        android:text="@string/editTextMain"
        android:textColor="@color/colorPrimary" />

    <!-- View, used as divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Show, Button -->
    <Button
        android:id="@+id/buttonMainShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:text="@string/buttonMain"
        android:textColor="@color/colorWhite" />

</LinearLayout>