<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/stats_margin"
    android:orientation="vertical"
    tools:context=".StatisticsActivity">

    <TextView
        android:id="@+id/textViewStatsCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="monospace"
        android:text="@string/last_week"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TableLayout
        android:id="@+id/tableLayoutStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="start"
                android:text="@string/week_day"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/table_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="end"
                android:text="@string/temperature"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/table_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="end"
                android:text="@string/pressure"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/table_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="end"
                android:text="@string/humidity"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/table_font_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView />
        </TableRow>


        <TableRow>
            <TextView
                android:id="@+id/textViewStatsTableMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/monday"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/table_font_size" />

            <TextView
                android:id="@+id/textViewStatsTableMonTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/table_font_size" />

            <TextView
                android:id="@+id/textViewStatsTableMonPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
