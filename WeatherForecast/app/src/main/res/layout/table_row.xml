        android:text="" />

    <TextView
        android:id="@+id/tableRowCel2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end" />

    <TextView
        android:id="@+id/tableRowCel3"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end" />

    <TextView
        android:id="@+id/tableRowCel4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end" />

</LinearLayout>